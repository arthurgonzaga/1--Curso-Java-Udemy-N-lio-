package application;

import java.util.Scanner;

import entities.Dollar;

public class Main {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		Dollar dollar = new Dollar();
		
		System.out.println("Digite a cotação atual do dolar: ");
		dollar.valor = scan.nextDouble();
		
		System.out.println("Valor do dolar sem impostos: "+dollar.valor);
		System.out.println("Valor do dollar com impostos: "+dollar.valorFinalDolar());

	}

}
